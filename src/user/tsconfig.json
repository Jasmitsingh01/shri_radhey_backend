{
  "compilerOptions": {
    // Specify ECMAScript target version
    "target": "ES2020",

    // Specify module code generation
    "module": "CommonJS",

    // Specify root folder for TypeScript files
    "rootDir": "./",

    // Specify output directory for compiled JavaScript files
    "outDir": "dist",

    // Enable strict type checking options
    "strict": true,

    // Allow default imports from modules with no default export
    "esModuleInterop": true,

    // Include source maps for easier debugging
    "sourceMap": true,

    // Enable decorators (useful for frameworks like NestJS)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Include type definitions from `node_modules/@types`
    "typeRoots": ["./node_modules/@types"],

    // Specify module resolution strategy
    "moduleResolution": "node",

    // Suppress output of `.d.ts` declaration files
    "declaration": false,

    // Include paths for modern JS features
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    // Specify files and directories to include in the compilation
    "./**/*.ts"
  ],
  "exclude": [
    // Exclude unnecessary files/directories
    "node_modules",
    "dist",
    "test"
  ]
}
